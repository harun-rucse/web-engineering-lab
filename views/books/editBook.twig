{% extends 'layouts/layout.twig' %}

{% block title %}Edit book{% endblock %}

{% block content %}
    <div class="container">
        <div class="row pt-5 d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="fs-6 text-primary">
                            <i class="bi bi-file-earmark-plus-fill"></i>
                            <span>Update a book</span>
                        </h3>
                    </div>
                    <div class="card-body">
                        <form action="editBook.php" method="POST">
                            <input type="hidden" name="id" value="{{book['id']}}">
                            <div class="form-group mb-3">
                                <input type="text" name="title" class="form-control p-2" placeholder="Title" value="{{book['title']}}" required />
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="author" class="form-control p-2" placeholder="Author" value="{{book['author']}}" required />
                            </div>
                            <div class="form-group mb-3">
                                <input type="number" name="stock" class="form-control p-2" placeholder="Stock" value="{{book['stock']}}" required />
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="isbn" class="form-control p-2" placeholder="ISBN" value="{{book['isbn']}}" required />
                            </div>
                            <div class="form-group">
                                <input type="number" name="price" class="form-control p-2" placeholder="Price" value="{{book['price']}}" required />
                            </div>
                            <button type="submit" class="btn btn-info col-12 mt-3 p-2">
                                <i class="bi bi-pencil-square"></i>
                                <span class="fw-bold fs-6">Submit</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}