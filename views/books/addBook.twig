{% extends 'layouts/layout.twig' %}

{% block title %}Create new book{% endblock %}

{% block content %}
    <div class="container">
        <div class="row pt-5 d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="fs-6 text-primary">
                            <i class="bi bi-file-earmark-plus-fill"></i>
                            <span>Entry new book</span>
                        </h3>
                    </div>
                    <div class="card-body">
                        <form action="addBook.php" method="POST">
                            <div class="form-group mb-3">
                                <input type="text" name="title" class="form-control p-2" placeholder="Title" required />
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="author" class="form-control p-2" placeholder="Author" required />
                            </div>
                            <div class="form-group mb-3">
                                <input type="number" min=0 name="stock" class="form-control p-2" placeholder="Stock" required />
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="isbn" class="form-control p-2" placeholder="ISBN" required />
                            </div>
                            <div class="form-group">
                                <input type="number" min=0 name="price" class="form-control p-2" placeholder="Price" required />
                            </div>
                            <button type="submit" class="btn btn-info col-12 mt-3 p-2">
                                <i class="bi bi-plus-circle"></i>
                                <span class="fw-bold fs-6">Submit</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}